pipeline {
environment {
registry = "balajirajmohanbr/mediawiki"
registryCredential = 'dockerhub_id'
dockerImage = ''
}
agent any
stages {
stage('Cloning our Git') {
steps {
git 'https://github.com/balajirajmohan/twdemo.git'
}
}
stage('Building our image'){
steps{
script {
dockerImage = docker.build registry + ":$BUILD_NUMBER"
}
}
}

stage('Deploy our image') {
steps{
script {
docker.withRegistry( '', registryCredential ) {
dockerImage.push()
}
}
}
}
stage('Cleaning up') {
steps{
sh "docker rmi $registry:$BUILD_NUMBER"
}
}
stage('deploy into Docker Host') {
steps{
sh "ssh -tt ec2-user@18.130.199.154 -i mediawiki.pem"
sh "docker run --name balaji-mediawiki -p 8080:80 -d balajirajmohanbr/mediawiki:latest"
}
}
}
}
